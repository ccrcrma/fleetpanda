@model fleetpanda.webui.Dtos.JobSettingsDto

@{
    ViewData["Title"] = "Create/Edit Configuration";
}

<h2>Create/Edit Configuration</h2>

<div class="row">
    <div class="col col-md-6 col-12">
        <form asp-action="Configure" method="post">
            <div class="form-group">
                <label asp-for="DurationInMinutes" class="control-label"></label>
                <input min="0" asp-for="DurationInMinutes" class="form-control" />
                <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

